{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "ES2018",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "esnext"
    ],
     "outDir": "./lib",
    "typeRoots": [
    "./node_modules/@types",
    "./typings"
],
    "types": [
      "tuyapi"
    ]
  },
  "exclude": [
   "**/node_modules",
   "**/*.spec.ts"
 ],
  "include": [
    "./src/**/*.ts"
  ]
}
